{
  "manifest_version": 3,
  "name": "Simulator Script Editor Enhancer",
  "version": "1.0.0",
  "description": "Browser extension to enhance Simulator.Company script editor functionality",
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.simulator.company/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.simulator.company/script/*/edit/*"],
      "js": ["config-manager.js", "content-bridge.js"],
      "run_at": "document_start",
      "world": "ISOLATED"
    },
    {
      "matches": ["*://*.simulator.company/script/*/edit/*"],
      "js": ["bridge-setup.js", "content.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["default-config.json"],
      "matches": ["*://*.simulator.company/*"]
    }
  ]
}
